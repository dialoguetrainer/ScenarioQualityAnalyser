{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "scenarioID": {
                "type": "integer",
            },
            "history": {
                "type": "object",
                "properties": {
                    "dialogue": {
                        "type": "array",
                        "items": [
                            {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "player",
                                            "computer",
                                            "situation"
                                        ]
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    }
}